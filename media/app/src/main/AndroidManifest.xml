<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartdatainc.media" >

    <uses-feature android:name="android.hardware.camera2" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    

    <application
        android:name="com.smartdatainc.activities.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name="com.smartdatainc.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.smartdatainc.activities.AppActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.smartdatainc.activities.LoginActivity"></activity>
        <activity android:name="com.smartdatainc.activities.SignUp"></activity>
        <activity android:name="com.smartdatainc.activities.DashboardActivity"></activity>

        <activity android:name="com.facebook.LoginActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
            
        
        
        <activity
            android:name="com.smartdatainc.activities.ChoosePhotoActivity"
            android:label="@string/title_activity_choose_photo" >
        </activity>
        <activity android:name="com.smartdatainc.activities.ShowMediaGalleryActivity" />
        <activity android:name="com.smartdatainc.activities.ShowVideoActivity" />
        
        
        
        
        
        

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        
        
        
        
        
    </application>

</manifest>
